CC = gcc
SRC = main.c school.c
NAME = school

CFLAGS = -Wall -Werror -Wextra -pedantic

OBJ = $(SRC:.c=.o)
RM = rm -f

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $@ $^

%.o: %.c
	$(CC) -c $(CFLAGS) -o $@ $<

clean:
	$(RM) $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

